<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.java110.things.dao.IParkingAreaServiceDao">

    <insert id="saveParkingArea" parameterType="com.java110.things.entity.parkingArea.ParkingAreaDto">
        INSERT INTO `parking_area` (`pa_id`, `community_id`, `num`, `ext_pa_id`)
        VALUES (#{paId}, #{communityId}, #{num}, #{extPaId})
    </insert>
    <!--
        查询设备信息
    -->
    <select id="getParkingAreas" parameterType="com.java110.things.entity.parkingArea.ParkingAreaDto"
            resultType="com.java110.things.entity.parkingArea.ParkingAreaDto">
        select
        t.pa_id paId,
        t.community_id communityId,
        t.num num,
        t.ext_pa_id extPaId,
        t.create_time createTime
        from parking_area t
        where 1=1
        and t.status_cd = '0'
        <if test="paId != null and paId != ''">
            and t.pa_id = #{paId}
        </if>
        <if test="communityId != null and communityId != ''">
            and t.community_id = #{communityId}
        </if>
        <if test="num != null and num != ''">
            and t.num = #{num}
        </if>
        <if test="extPaId != null and extPaId != ''">
            and t.ext_pa_id = #{extPaId}
        </if>
        order by t.create_time desc
        <if test="page != -1 and page != null ">
            limit #{page}, #{row}
        </if>

    </select>

    <select id="getParkingAreaCount" parameterType="com.java110.things.entity.parkingArea.ParkingAreaDto"
            resultType="long">
        select
        count(1) count
        from parking_area t
        where 1=1
        and t.status_cd = '0'
        <if test="paId != null and paId != ''">
            and t.pa_id = #{paId}
        </if>
        <if test="communityId != null and communityId != ''">
            and t.community_id = #{communityId}
        </if>
        <if test="num != null and num != ''">
            and t.num = #{num}
        </if>
        <if test="extPaId != null and extPaId != ''">
            and t.ext_pa_id = #{extPaId}
        </if>

    </select>

    <update id="updateParkingArea" parameterType="com.java110.things.entity.parkingArea.ParkingAreaDto">
        update parking_area t
        <trim prefix="SET" suffixOverrides=",">

            <if test="num != null and num != ''">
                t.num = #{num},
            </if>
            <if test="extPaId != null and extPaId != ''">
                t.ext_pa_id = #{extPaId},
            </if>

            <if test="statusCd != null and statusCd != ''">
                t.status_cd = #{statusCd},
            </if>
        </trim>
        where 1=1
        <if test="paId != null and paId != ''">
            and t.pa_id = #{paId}
        </if>
        <if test="communityId != null and communityId != ''">
            and t.community_id = #{communityId}
        </if>

    </update>

    <delete id="delete" parameterType="com.java110.things.entity.parkingArea.ParkingAreaDto">
        delete from parking_area where pa_id = #{paId}
    </delete>

</mapper>